<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pulsewiseitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView

            android:id="@+id/systolicTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Systolic:"

            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/systolicAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="@color/pomodoro_amount_textview"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/systolicTv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="90" />

        <TextView

            android:id="@+id/diastolicTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:padding="8dp"
            android:text="Diastolic:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/systolicTv"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/diastolicAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="@color/pomodoro_amount_textview"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/diastolicTv"
            app:layout_constraintTop_toBottomOf="@id/systolicAmountTv"
            tools:text="90" />
        <TextView

            android:id="@+id/pulseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pulse:"

            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diastolicTv" />
        <TextView
            android:id="@+id/pulseAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="@color/pomodoro_amount_textview"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/pulseTv"
            app:layout_constraintTop_toBottomOf="@id/diastolicAmountTv"
            tools:text="90" />



        <TextView

            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"


            android:textSize="20sp"
            android:textStyle="bold"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toEndOf="@+id/systolicAmountTv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Date:" />

        <TextView
            android:id="@+id/dateAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"


            android:alpha="0.5"
            android:padding="8dp"
            android:text="26.03.24"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dateTv"
            app:layout_constraintTop_toTopOf="@id/dateTv" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toEndOf="@+id/diastolicAmountTv"
            app:layout_constraintTop_toBottomOf="@id/dateTv"
            tools:text="Time:" />

        <TextView
            android:id="@+id/timeAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"


            android:alpha="0.5"
            android:padding="8dp"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timeTv"
            app:layout_constraintTop_toBottomOf="@id/dateAmountTv"
            tools:text="9:00 AM" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>